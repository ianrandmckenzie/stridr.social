<!DOCTYPE html>
<html lang="en">
  <head>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">

    <%= render 'application/favicon' %>
    <meta name="keywords" content="stridr, all-in-one-social-media, social-discovery, social-media-aggregator, social-recommender, social-network-aggregator, find-new-content, social-content-discovery, content-discovery, north-island-college-class-project" />
    <% if @social_page_show %>
    <!-- OG tags -->
      <title>Stridr | Visit <%= @social_page.page_name %>, a social page on <%= @social_page.platform_name %></title>      <meta name="description" content="Check out <%= @social_page.page_name %>, a <%= @social_page.platform_name %> page discovered through https://www.stridr.social !">
      <meta property="og:site_name" content="Stridr"/>
      <meta property="og:title" content="Check out <%= @social_page.page_name %>!"/>
      <meta property="og:description" content="A <%= @social_page.platform_name %> page discovered through www.stridr.social">
      <meta property="og:image" content="<%= @social_page.avatar.url %>">
      <meta property="og:url" content="https://www.stridr.social<%= social_page_path(@social_page) %>">
      <meta property="og:type" content="website">
      <meta property="fb:app_id" content="<%= ENV['FACEBOOK_ID'] %>">
    <!-- Twitter tags -->
      <meta name="twitter:card" content="summary">
      <meta name="twitter:site" content="@stridrsocial">
      <meta name="twitter:title" content="Check out <%= @social_page.page_name %>!">
      <meta name="twitter:description" content="A <%= @social_page.platform_name %> page discovered through www.stridr.social">
      <meta name="twitter:image" content="<%= @social_page.avatar.url %>">
      <meta name="twitter:domain" content="https://www.stridr.social">
    <% elsif @user_show %>
      <title>Stridr | <%= @user.username %></title>
      <!-- OG -->
      <meta name="description" content="Compare your interests with <%= @user.username %> and find them on social media!" />
      <meta property="og:site_name" content="Stridr"/>
      <meta property="og:title" content="Compare your interests with <%= @user.username %> and find them on social media!"/>
      <meta property="og:description" content="An all-in-one social media app to discover great new content."/>
      <meta property="og:image" content="https://stridr.social/user/<%= @user.id.to_s %>.png">
      <meta property="og:url" content="https://stridr.social<%= profile_path(@user) %>">
      <meta property="og:type" content="website">
      <meta property="fb:app_id" content="<%= ENV['FACEBOOK_ID'] %>">
    <!-- Twitter tags -->
      <meta name="twitter:card" content="summary">
      <meta name="twitter:site" content="@stridrsocial">
      <meta name="twitter:title" content="<%= @user.username %> on Stridr">
      <meta name="twitter:description" content="Compare your interests with <%= @user.username %> and find them on social media!">
      <meta name="twitter:image" content="https://stridr.social/user/<%= @user.id.to_s %>.png">
      <meta name="twitter:domain" content="https://www.stridr.social">
    <% else %>
      <title>Stridr | Your All-in-One Social Discovery Engine</title>
      <meta name="description" content="Stridr looks at everything you like on social media and suggests more cool stuff; cross platform, all on Stridr.social!" />
      <meta property="og:site_name" content="Stridr"/>
      <meta property="og:title" content="Stridr looks at everything you like on social media and offers ways to discover cool new content!"/>
      <meta property="og:description" content="An all-in-one social media app to discover great new content."/>
      <meta property="og:image" content="https://stridr.social/og-image.jpg">
      <meta property="og:url" content="https://stridr.social/">
      <meta property="og:type" content="website">
      <meta property="fb:app_id" content="<%= ENV['FACEBOOK_ID'] %>">
    <% end %>
    <meta name="p:domain_verify" content="1eac0b386607447d8f8d9733dc97a7cc"/>
    <meta name="google-site-verification" content="6kI0MvERnzwgtvsCMZ0BG0mI-YhCtVmBm9RsEMriy1A" />

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "Organization",
        "name": "Stridr",
        "url": "https://www.stridr.social",
        "logo": "https://stridr.social/logo-final.png",
        "sameAs": [
            "https://www.facebook.com/stridrsocial",
            "https://www.pinterest.com/stridrsocial",
            "https://stridrsocial.tumblr.com/",
            "https://twitter.com/stridrsocial"
        ]
      },
      {
        "@context": "http://schema.org/name",
        "@type": "WebSite",
        "name": "Stridr",
        "alternateName": "stridr.social",
        "url": "https://stridr.social"
      }
    </script>

    <!-- Facebook share button JS -->
    <script>
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.9&appId=1641816879167434";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>
    <!-- Twitter share button JS -->
    <script>
      window.twttr = (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0],
          t = window.twttr || {};
        if (d.getElementById(id)) return t;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://platform.twitter.com/widgets.js";
        fjs.parentNode.insertBefore(js, fjs);

        t._e = [];
        t.ready = function(f) {
          t._e.push(f);
        };

        return t;
      }(document, "script", "twitter-wjs"));
    </script>
    <!-- Tumblr share button JS -->
    <script>
      !function(d,s,id){var js,ajs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://assets.tumblr.com/share-button.js";ajs.parentNode.insertBefore(js,ajs);}}(document, "script", "tumblr-js");
    </script>
    <!-- Pinterest pinit button JS -->
    <script
        type="text/javascript"
        async defer
        src="//assets.pinterest.com/js/pinit.js"
    ></script>
  </head>

  <body id="<%= controller_name %>_<%= action_name %>">
  <div id="fb-root"></div>
    <%= render "layouts/navbar" %>
    <%= yield %>

    <div id="user-id" style="display:none;">
      <% if current_user %>
      <%= current_user.id %>
      <% end %>
    </div>
    <script>
      var USER_ID = document.getElementById("user-id").textContent;
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-99135446-1', 'auto');
      ga('send', 'pageview');
      ga('set', 'userId', USER_ID); // Set the user ID using signed-in user_id.
    </script>

  </body>
</html>
