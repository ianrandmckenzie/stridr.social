
<div id="card-wrapper">

  <div class="card-container">

    <div class="row">
      <div class="card-body">
        <div class="log-in-container">

          <h1>Sign Up</h1>
          <%= render 'errors' %>
          <hr>

          <div class="col-md-6 col-md-push-6">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>

              <div class="form-group">
                <%= form.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address" %>
              </div>

              <div class="form-group">
                <%= form.text_field :username, class: "form-control", placeholder: "Username", required: "true" %>
              </div>

              <div class="form-group">
                <% if @minimum_password_length %>
                  <%= form.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password (" + @minimum_password_length.to_s + " characters minimum)" %>
                <% else %>
                  <%= form.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
                <% end %>
              </div>
              <div class="form-group">
                <%= form.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password" %>
              </div>
              <br>
              <%= form.submit "Sign Up", class: "btn btn-sign-in" %>
            <% end %>
          </div>

          <div id="or">
            <div id="or-text">OR</div>
          </div>

          <div class="col-md-6 col-md-pull-6">
            <%= button_to user_facebook_omniauth_authorize_path, class: "btn btn-lg btn-social btn-facebook" do %>
              <span class="fa fa-facebook"></span> Sign in with Facebook
            <% end %>
            <%= button_to user_twitter_omniauth_authorize_path, class: "btn btn-lg btn-social btn-twitter" do %>
              <span class="fa fa-twitter"></span> Sign in with Twitter
            <% end %>
            <%= button_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-lg btn-social btn-google" do %>
              <span class="fa fa-google"></span> Sign in with Google
            <% end %>
            <%= button_to user_twitch_omniauth_authorize_path, class: "btn btn-lg btn-social btn-twitch" do %>
              <span class="fa fa-twitch"></span> Sign in with Twitch
            <% end %>
            <p>By registering, you agree to the <a href="http://stridr.social/privacy.html" target="_blank">privacy policy</a> and <a href="http://stridr.social/terms.html" target="_blank">terms of service</a>.</p>
          </div>

          <hr class="form-break">

          <p>
            Already have an account? <strong><%= link_to "Sign In", new_user_session_path %></strong><br />
            We're mindful of security and privacy. <strong style="cursor:pointer;color:#547791;" class="badges-modal-open" data-toggle="modal" data-target="#privacyModal">See the information we collect.</strong>
          </p>
        </div>
      </div>
    </div>

  </div>

</div>
